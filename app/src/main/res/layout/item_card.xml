<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/zero_padding"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_Img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_view_img" />

        <TextView
            android:id="@+id/card_Nom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_alignBottom="@+id/card_Img"
            android:layout_marginLeft="@dimen/seize_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/card_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="@+id/card_Img"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/card_createur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_Img"
            android:layout_marginLeft="@dimen/seize_padding"
            android:layout_marginTop="@dimen/seize_padding"
            android:layout_marginBottom="@dimen/seize_padding"
            android:layout_marginRight="@dimen/seize_padding"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/article_subheading" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_createur"
            android:layout_marginLeft="@dimen/seize_padding"
            android:layout_marginTop="@dimen/seize_padding"
            android:layout_marginBottom="@dimen/seize_padding"
            android:layout_marginRight="@dimen/seize_padding"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/article_subheading" />

        <TextView
            android:id="@+id/card_duree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_Img"
            android:layout_toRightOf="@+id/card_createur"
            android:layout_marginLeft="@dimen/seize_padding"
            android:layout_marginTop="@dimen/seize_padding"
            android:layout_marginBottom="@dimen/seize_padding"
            android:layout_marginRight="@dimen/seize_padding"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/article_subheading" />

        <ImageButton
            android:id="@+id/card_menu"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_marginRight="@dimen/seize_padding"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_below="@+id/card_Img"
            android:layout_alignParentRight="true"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/cardview_dark_background" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_marginRight="@dimen/seize_padding"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_below="@+id/card_createur"
            android:layout_alignParentRight="true"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/cardview_dark_background" />

    </RelativeLayout>


</android.support.v7.widget.CardView>